@model IEnumerable<Workout>

@{
    var maxSets = Model.Any() ? Model.Max(m => m.Sets.Count) : 0;
}

<!DOCTYPE html>

<html>
<head>
    <title>Workouts</title>
</head>
<body>
<h1>All Workouts</h1>
<div style="display: block">
    <a class="btn btn-primary" href="/Workout/CreateWorkout/">Add Workout</a>
</div>
<div>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
        <tr>
            <th rowspan="2" class="align-middle">ID</th>
            <th rowspan="2" class="align-middle">Date</th>
            <th rowspan="2" class="align-middle">Exercise</th>
            
            @for (int i = 1; i <= maxSets; i++)
            {
                <th colspan="2">Set @i</th>
            }

            <th rowspan="2" class="align-middle">Notes</th>
            <th rowspan="2"></th>
            <th rowspan="2"></th>
        </tr>
        <tr>
            @for (int i = 1; i <= maxSets; i++)
            {
                <th>Weight</th>
                <th>Reps</th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (var workout in @Model)
        {
            <tr class="align-middle">
                <td><a href="/Workout/ViewWorkout/@workout.WorkoutId">@workout.WorkoutId</a></td>
                <td>@workout.WorkoutDate.ToString("yyyy-MM-dd")</td>
                <td>@workout.ExerciseName</td>
                
                    @for (int i = 0; i < maxSets; i++)
                    {
                        if (i < workout.Sets.Count)
                        {
                            <td>@workout.Sets[i].Weight</td>
                            <td>@workout.Sets[i].Reps</td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    }

                
                <td>@workout.Notes</td>
                <td><a class="btn btn-outline-secondary" href="/Workout/UpdateWorkout/@workout.WorkoutId">Edit</a></td>
                <td>
                    @using (Html.BeginForm("DeleteWorkout", "Workout", FormMethod.Post))
                    {
                        <input type="hidden" name="Id" value="@workout.WorkoutId"/>
                        <input type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this workout?')" value="Delete"/>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>
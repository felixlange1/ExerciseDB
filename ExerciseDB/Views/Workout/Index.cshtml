@model IEnumerable<Workout>


<!DOCTYPE html>

<html>
<head>
    <title>Workouts</title>
</head>
<body>
<h1>All Workouts</h1>
<div style="display: block">
    <a href="/Workout/CreateWorkout/">Add Workout</a>
</div>
<div>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Exercise Name</th>
            <th>Sets</th>
            <th>Reps</th>
            <th>Notes</th>
        </tr>
        
        @foreach (var workout in @Model)
        {
            <tr>
                <td><a href=/Workout/ViewWorkout/@workout.Id>@workout.Id</a></td>
                <td>@workout.WorkoutDate.ToString("yyyy-MM-dd")</td>
                <td>@workout.ExerciseName</td>
                <td>@workout.Sets</td>
                <td>@workout.Reps</td>
                <td>@workout.Notes</td>
                <td><a href=/Workout/UpdateWorkout/@workout.Id>Edit</a></td>
                <td>@using (Html.BeginForm("DeleteWorkout", "Workout", FormMethod.Post))
                    {
                        <input type="hidden" name="Id" value="@workout.Id" />
                        <input type="submit" onclick="return confirm('Are you sure you want to delete this workout?')" value="Delete" />
                    }</td>
            </tr>
        }
        
    </table>
</div>
</body>
</html>
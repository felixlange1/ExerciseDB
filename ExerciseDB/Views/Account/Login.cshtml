@model LoginViewModel



<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
</head>
<body>
<div class="container-fluid vh-100">
    <div class="row vh-100 justify-content-center align-items-start pt-5">
        <div class="col-11 col-sm-8 col-md-6 col-lg-4">
            <div class="card rounded-3 login-wrapper">
                <div class="card-body">
                    <h2 class="ps-2 text-center mb-4">Login</h2>
                    <div class="container">
                        <div class="row mb-3">

                            <form asp-controller="Account" asp-action="Login" method="post">
                                <div class="mb-3">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email"/>
                                </div>
                                <div class="mb-3">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password"/>
                                </div>
                                <div class="d-flex justify-content-center mb-3">
                                    <button type="submit" class="btn btn-primary">Login</button>
                                </div>
                                
                            </form>
                            <p>Don't have an account? Register <a asp-controller="Account" asp-action="Register">here</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


</body>
</html>